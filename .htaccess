# ============================================
# AI CHATBOT - APACHE CONFIGURATION
# ============================================

# Enable Rewrite Engine
RewriteEngine On

# Set base directory
RewriteBase /chatbot_project/

# Redirect to index.php if accessing root
DirectoryIndex index.php

# Security: Prevent directory browsing
Options -Indexes

# Security: Protect sensitive files
<FilesMatch "(\.sql|\.md|composer\.(json|lock))$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Security: Protect configuration files
<FilesMatch "^(database\.php|config\.php)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Set default charset
AddDefaultCharset UTF-8

# Enable compression for faster loading
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache static files for better performance
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    # Prevent XSS attacks
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Enable HSTS (only for HTTPS)
    # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Custom error pages (optional)
# ErrorDocument 404 /chatbot_project/pages/404.php
# ErrorDocument 500 /chatbot_project/pages/500.php

# PHP settings (if allowed)
<IfModule mod_php7.c>
    # Display errors (disable in production)
    php_flag display_errors On
    php_flag display_startup_errors On
    
    # Error reporting level
    php_value error_reporting E_ALL
    
    # Session settings
    php_value session.gc_maxlifetime 3600
    php_flag session.cookie_httponly On
    
    # File upload settings
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    
    # Memory limit
    php_value memory_limit 256M
    
    # Execution time
    php_value max_execution_time 60
</IfModule>
